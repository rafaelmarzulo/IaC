[Unit]
Description=Node Exporter
Wants=network-online.target
After=network-online.target

[Service]
User={{ monitoring_node_exporter_user }}
Group={{ monitoring_node_exporter_group }}
Type=simple
ExecStart={{ monitoring_node_exporter_install_dir }}/node_exporter \
    --web.listen-address=":{{ monitoring_node_exporter_port }}"

[Install]
WantedBy=multi-user.target

