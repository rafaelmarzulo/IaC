# =============================================================================
# Development Environment Configuration
# =============================================================================

# Environment settings
environment   = "dev"
project_name  = "myproject"

# Proxmox configuration
target_node     = "proxmox-node1"
template_name   = "ubuntu-22.04-template"
template_id     = "1010"  # Optional: specify template VMID

# VM configuration
vm_count        = 2
vm_name_prefix  = "dev-vm"
vmid_start      = 1100

vm_defaults = {
  cores     = 2
  memory    = 2048
  disk_size = "20G"
  storage   = "local-lvm"
}

# Network configuration
network_bridge = "vmbr0"
ip_base        = "10.21.250"
ip_start       = 100
ip_cidr        = 24
ip_gateway     = "10.21.250.1"
nameserver     = "1.1.1.1 8.8.8.8"

# Cloud-init configuration
ci_user     = "ubuntu"
ci_password = ""  # Leave empty to use SSH keys only
ssh_keys    = <<-EOT
  ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAI... user@example.com
  ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQ... admin@example.com
EOT

# Tags and metadata
additional_tags = ["development", "testing", "auto-deploy"]
created_by     = "terraform-dev"

# Feature flags
enable_cloud_init = true
enable_backup     = false
enable_monitoring = false