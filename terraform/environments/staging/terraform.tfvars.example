# =============================================================================
# Staging Environment Configuration
# =============================================================================

# Environment settings
environment   = "staging"
project_name  = "myproject"

# Proxmox configuration
target_node     = "proxmox-node1"
template_name   = "ubuntu-22.04-template"
template_id     = "1010"

# VM configuration
vm_count        = 2
vm_name_prefix  = "staging-vm"
vmid_start      = 2100

vm_defaults = {
  cores     = 2
  memory    = 4096
  disk_size = "40G"
  storage   = "local-lvm"
}

# Network configuration (same network as dev for this example)
network_bridge = "vmbr0"
ip_base        = "10.21.250"
ip_start       = 200
ip_cidr        = 24
ip_gateway     = "10.21.250.1"
nameserver     = "1.1.1.1 8.8.8.8"

# Cloud-init configuration
ci_user     = "ubuntu"
ci_password = ""
ssh_keys    = <<-EOT
  ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAI... user@example.com
  ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQ... admin@example.com
EOT

# Tags and metadata
additional_tags = ["staging", "pre-production", "manual-deploy"]
created_by     = "terraform-staging"

# Feature flags
enable_cloud_init = true
enable_backup     = true
enable_monitoring = true